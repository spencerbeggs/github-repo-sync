{
  "name": "@spencerbeggs/github-repo-sync",
  "version": "0.1.0",
  "description": "CLI tool to sync GitHub repo settings, secrets, and rulesets across personal repositories",
  "type": "module",
  "bin": {
    "github-repo-sync": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "sync": "tsx src/cli.ts sync",
    "typecheck": "tsc --noEmit"
