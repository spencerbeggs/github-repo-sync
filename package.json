  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.0.0",
    "tweetsodium": "^0.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
